@{
    Layout = "../Shared/_LayoutBlank.cshtml";
    ViewData["Title"] = "Register";
    //titre de page
}


@section Styles {
    <!--Bootstrap CSS-->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!--paper bootstrap wizard-->
    <link rel="stylesheet" href="~/css/themify-icons.css">
    <link rel="stylesheet" href="~/css/paper-bootstrap-wizard.css">
    <!--Font Awesome-->
    <link rel="stylesheet" href="~/css/fontawesome.css">
    <!--Chartist CSS-->
    <link rel="stylesheet" href="~/css/chartist.min.css">
    <!--Bootstrap Calendar-->
    <link rel="stylesheet" href="~/js/calendar/bootstrap_calendar.css">
    <!--Switchery CSS-->
    <!--Custom style.css-->
    <link rel="stylesheet" href="~/css/quicksand.css">
    <link rel="stylesheet" href="~/css/style.css">
    <!--Form validator-->
    <link rel="stylesheet" href="~/js/form-validator/theme-default.min.css">
}

<div class="login-body">

    <div class="container-fluid login-wrapper">
        <!--Page loader-->
        <div class="loader-wrapper">
            <div class="loader-circle">
                <div class="loader-wave"></div>
            </div>
        </div>
        <!--Page loader-->
        <!--Page Wrapper-->

        <div class="container-fluid">



            <!--Main Content-->
            <!--Sidebar left-->
            <!--Content right-->
            <div class="col-sm-9 col-xs-12 content pt-3 pl-0">


                <div class="row mt-3">
                    <div class="col-sm-12">
                        <!--Form wizard-->
                        <div class="mt-1 mb-3 p-3 button-container bg-white border shadow-sm">


                            <div class="wizard-container">
                                <div class="card wizard-card" data-color="theme" id="wizardProfile">
                                    <form asp-area="Supplier" asp-controller="User" asp-action="RegisterResult">
                                        <!--        You can switch " data-color="orange" "  with one of the next bright colors: "blue", "green", "orange", "red", "azure"          -->

                                        <div class="wizard-header text-center">
                                            <h3 class="wizard-title">Create your company profile</h3>
                                            <p class="category">This information will allow us to learn more about you.</p>
                                            <div class="category">
                                                <i class="fa-solid fa-siren-on"></i>
                                                <p class="category">You must be authorized by your company to make this request !</p>
                                                <i class="fa-solid fa-siren-on"></i>
                                            </div>
                                        </div>

                                        <div class="wizard-navigation">
                                            <div class="progress-with-circle">
                                                <div class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="1" aria-valuemax="3" style="width: 21%;"></div>
                                            </div>
                                            <ul>
                                                <li>
                                                    <a href="#about" data-toggle="tab">
                                                        <div class="icon-circle">
                                                            <i class="ti-user"></i>
                                                        </div>
                                                        Profile
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#address" data-toggle="tab">
                                                        <div class="icon-circle">
                                                            <i class="ti-map"></i>
                                                        </div>
                                                        Address
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#account" data-toggle="tab">
                                                        <div class="icon-circle">
                                                            <i class="ti-settings"></i>
                                                        </div>
                                                        Contact
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="tab-content">
                                            <div class="tab-pane" id="about">
                                                <div class="row">
                                                    <div class="col-sm-10 offset-sm-1">
                                                        <h6 class="info-text text-center">Thank you for telling us more.</h6>
                                                        <div class="row">
                                                            <div class="col-sm-4">
                                                                <div class="picture-container">
                                                                    <div class="picture">
                                                                        <img src="~/img/default-avatar.jpg" class="picture-src" id="wizardPicturePreview" title="" />
                                                                        <input type="file" id="wizard-picture">
                                                                    </div>
                                                                    <h6>Choose Picture</h6>
                                                                </div>
                                                            </div>

                                                            <div class="col-sm-8">
                                                                <div class="form-group">
                                                                    <label>Company name<span class="text-danger">*</span></label>
                                                                    <input name="name" type="text" class="form-control" placeholder="Maarquest">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label>Company sign<span class="text-danger">*</span></label>
                                                                    <input name="sign" type="text" class="form-control" placeholder="Maarquest group">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label>Siret<span class="text-danger">*</span></label>
                                                                    <input name="siret" type="text" class="form-control" id="validationCustom05" placeholder="01572394" required>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="tab-pane" id="account">
                                                <div class="row">
                                                    <div class="col-sm-10 offset-sm-1">
                                                        <h6 class="info-text text-center">This field is required</h6>
                                                    </div>

                                                    <div class="col-sm-6 offset-sm-1">
                                                        <div class="form-group">
                                                            <label>Email <small>(required)</small></label>

                                                            <div class="input-group">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text" id="inputGroupPrepend">.</span>
                                                                </div>
                                                                <input name="ContactMail" type="email" class="form-control" placeholder="andrew@creative-tim.com">
                                                                <div class="invalid-feedback">
                                                                    Please choose a username.
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label>Phone Number<span class="text-danger">*</span></label>
                                                            <input name="ContactPhone" type="text" class="form-control" id="validationCustom05" placeholder="Phone Number" required>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="tab-pane" id="address">
                                                <div class="row">
                                                    <div class="col-sm-12">
                                                        <h5 class="info-text"> Address of the siege </h5>
                                                    </div>
                                                    <div class="col-sm-7 col-sm-offset-1">
                                                        <div class="form-group">
                                                            <label>Place name<span class="text-danger">*</span></label>
                                                            <input name="Address.Receiver" type="text" class="form-control" placeholder="">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-7 col-sm-offset-1">
                                                        <div class="form-group">
                                                            <label>First lign<span class="text-danger">*</span></label>
                                                            <input name="Address.LignOne" type="text" class="form-control" placeholder="">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-7 col-sm-offset-auto">
                                                        <div class="form-group">
                                                            <label>Second lign<span class="text-danger">*</span></label>
                                                            <input name="Address.LignTwo" type="text" class="form-control" placeholder="">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-5 col-sm-offset-1">
                                                    </div>
                                                    <div class="col-sm-2 col-sm-offset-1">
                                                        <div class="form-group">
                                                            <label>Postcode<span class="text-danger">*</span></label>
                                                            <input name="Address.PostCode" type="text" class="form-control" placeholder="69000">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-5 col-sm-offset-1">
                                                        <div class="form-group">
                                                            <label>City<span class="text-danger">*</span></label>
                                                            <input name="Address.City" type="text" class="form-control" placeholder=".">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-5 col-sm-offset-1">
                                                    </div>
                                                    <div class="col-sm-3 col-sm-offset-1">
                                                        <div class="form-group">
                                                            <label>Region<span class="text-danger"></span></label>
                                                            <input name="Address.Region" type="text" class="form-control" placeholder="">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <div class="form-group">
                                                            <label>Pays<span class="text-danger">*</span></label><br>
                                                            <select name="Address.Country" class="form-control">
                                                                <option value="">  </option>
                                                                <option value="DOM-TOM"> DOM-TOM </option>
                                                                <option value="France"> France </option>
                                                                <option value="Canada"> Canada </option>
                                                                <option value="Spain"> Espagne</option>
                                                                <option value="Andorra"> Andorra </option>
                                                                <option value="USA"> USA </option>
                                                                <option value="Anguilla"> Anguilla </option>
                                                                <option value="Antarctica"> Antarctica </option>
                                                                <option value="Other">Autres</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4 col-sm-offset-1">
                                                    </div>
                                                    <div class="col-sm-4 col-sm-offset-1">
                                                        <div class="form-group">
                                                            <label>Numéro de téléphone<span class="text-danger">*</span></label>
                                                            <input name="Phone" type="text" class="form-control" placeholder="+33 ...">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3 col-sm-offset-1">
                                                        <div class="form-group">
                                                            <label>Fax<span class="text-danger"></span></label>
                                                            <input name="Fax" type="text" class="form-control" placeholder="+33 ...">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="wizard-footer">
                                            <div class="pull-right">
                                                <input type='button' class='btn btn-next btn-fill btn-theme btn-wd' name='next' value='Next' />
                                                <input type='submit' class='btn btn-finish btn-fill btn-theme btn-wd' name='finish' value='Finish' />

                                            </div>

                                            <div class="pull-left">
                                                <input type='button' class='btn btn-previous btn-default btn-wd' name='previous' value='Previous' />
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </form>
                                </div>
                            </div> <!-- wizard container -->

                        </div>
                        <!--/Form wizard-->
                    </div>
                </div>



            </div>


            <!--Main Content-->

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery-1.12.4.min.js"></script>
    <!--Popper JS-->
    <script src="~/js/popper.min.js"></script>
    <!--Bootstrap-->
    <script src="~/js/bootstrap.min.js"></script>
    <!--Sweet alert JS-->
    <script src="~/js/sweetalert.js"></script>
    <!--Progressbar JS-->
    <script src="~/js/progressbar.min.js"></script>
    <!--Charts-->
    <!--Canvas JS-->
    <script src="~/js/charts/canvas.min.js"></script>
    <!--Bootstrap Calendar JS-->
    <script src="~/js/calendar/bootstrap_calendar.js"></script>
    <script src="~/js/calendar/demo.js"></script>
    <!--Bootstrap Calendar-->
    <!--Paper bootstrap wizard-->
    <script src="~/js/jquery.bootstrap.wizard.js"></script>
    <script src="~/js/paper-bootstrap-wizard.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>

    <!--Custom Js Script-->
    <script src="~/js/custom.js"></script>
    <!--Custom Js Script-->
}
