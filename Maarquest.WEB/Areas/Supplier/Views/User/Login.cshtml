@model Maarquest.WEB.Areas.Supplier.Models.LoginModel

@{
    Layout = "../Shared/_LayoutBlank.cshtml";
    ViewData["Title"] = "Login";
    //titre de page
}

@section Styles {
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!--Bootstrap CSS-->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!--Custom style.css-->
    <link rel="stylesheet" href="~/css/quicksand.css">
    <link rel="stylesheet" href="~/css/style.css">
    <!--Font Awesome-->
    <link rel="stylesheet" href="~/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/css/fontawesome.css">
}

<div class="login-body">

    <!--Login Wrapper-->

    <div class="container-fluid login-wrapper">
        <div class="login-box">

            <div class="row">
                <div class="col-md-6 col-sm-6 col-12 login-box-info">
                    <i class="fa fa-rocket "></i>
                    <h2 class="mb-4">Maarquest</h2>

                    <h3 class="mb-4">Are you a supplier interested in our offer ?</h3>
                    <p class="mb-4">Contact us to see if we have a future to design together !</p>
                    <p class="text-center"><a asp-area="Supplier" asp-controller="User" asp-action="Register" class="btn btn-light">Contact us here</a></p>
                </div>
                <div class="col-md-6 col-sm-6 col-12 login-box-form p-4">
                    <h3 class="mb-2">Login</h3>
                    <small class="text-muted bc-description">Sign in with your credentials</small>
                    <form asp-area="Supplier" asp-controller="User" asp-action="LoginResult" class="mt-2">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fa fa-user"></i></span>
                            </div>
                            <input type="text" class="form-control mt-0" name="Identifier" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fa fa-lock"></i></span>
                            </div>
                            <input type="password" class="form-control mt-0" name="Password" placeholder="Password" aria-label="Password" aria-describedby="basic-addon1">
                        </div>
                        <input type="checkbox" name="RememberMe" checked="checked" class="remmemberme"> <p> Remember me</p>

                        <div class="form-group">
                            <input type="submit" class="btn btn-theme btn-block p-2 mb-1" value="Login"/>
                            <a asp-area="Supplier" asp-controller="User" asp-action="ForgotPassword">
                                <small class="text-theme"><strong>Forgot password?</strong></small>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Page JavaScript Files-->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery-1.12.4.min.js"></script>
    <!--Popper JS-->
    <script src="~/js/popper.min.js"></script>
    <!--Bootstrap-->
    <script src="~/js/bootstrap.min.js"></script>

    <!--Custom Js Script-->
    <script src="~/js/custom.js"></script>
}

